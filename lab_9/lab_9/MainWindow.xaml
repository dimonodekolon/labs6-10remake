<Window x:Class="lab_9.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab_9"
        mc:Ignorable="d"
        Title="Лаба 9" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <TextBlock Width="120" Height="30" Text="Выражение: " FontSize="20"/>
                <TextBox x:Name="tbExpression" Width="220" Height="30"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal">
                <TextBlock Width="240" Height="30" Text="Значение переменной x: " FontSize="20"/>
                <TextBox x:Name="tbValueX" Width="100" Height="30"/>
            </StackPanel>

            <Label x:Name="lbResult" Width="300" Height="40" Margin="0 10 0 0" FontSize="20"/>

            <Button x:Name="btnCalc" Width="200" Height="40" Margin="0 10 0 0" Click="btnCalc_Click" FontSize="20" Content="Рассчитать"/>
        </StackPanel>
    </Grid>
</Window>
